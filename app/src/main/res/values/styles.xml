<resources>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="backgroundColor">?attr/colorPrimary</item>
    </style>

    <!-- Chip -->
    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>

    <!-- TabLayout -->
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout.PrimarySurface">
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="Widget.App.ToolBar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:elevation">0dp</item>
    </style>

</resources>